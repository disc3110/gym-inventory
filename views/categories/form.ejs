<%- include("../partials/head", { title: title }) %>
<%- include("../partials/nav") %>

<main>
  <h1><%= title %></h1>

  <form method="POST" action="<%= action %>">
    <div class="card">
      <label>
        Name
        <input
          type="text"
          name="name"
          required
          value="<%= (category && category.name) ? category.name : '' %>"
        />
      </label>

      <br /><br />

      <label>
        Description
        <textarea name="description" rows="4"><%= (category && category.description) ? category.description : '' %></textarea>
      </label>

      <br /><br />

      <% if (action && action.includes('/edit')) { %>
        <label>
          Admin password (required to save changes)
          <input type="password" name="admin_password" required />
        </label>

        <br /><br />
      <% } %>

      <button type="submit">Save</button>
      <a href="/categories" class="muted">Cancel</a>
    </div>
  </form>
</main>

<%- include("../partials/foot") %>