<!DOCTYPE html>
<html>
  <head>
    <title>Categories</title>
  </head>
  <body>
    <h1>Categories</h1>
    <ul>
      <% if (locals.categories && categories.length >= 0) { %>
      <% categories.forEach(category => { %>                
        <li><%= category.name %></li>
      <% }) %>
      <% } else { %>
        <li>No categories found.</li>
      <% } %>
    </ul>
  </body>
</html>